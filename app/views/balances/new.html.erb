<%= stylesheet_link_tag "new_balance_styles", media: "all", "data-turbolinks-track": "reload" %>


<div class="flex flex-col">
  <div class="bg-header">
    <div class="flex justify-around items-center w-screen text-white">
      <%= link_to '<', root_path %>
      <h1 class="text-header">NEW BALANCE SHEET</h1>
      <svg class="search-svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
        <circle cx="11" cy="11" r="8"/>
        <line x1="21" x2="16.65" y1="21" y2="16.65"/>
      </svg>
    </div>
  </div>

  <% if @balance.errors.any? %>
    <div class="error-message">
      <p><%= pluralize(@balance.errors.count, "error") %> found:</p>

      <ul>
        <% @balance.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @balance, url: balances_path, method: :post, class: "form-container" do |form| %>
    <div class="input-field">
      <%= form.text_field :name, placeholder: 'Name', required: true %>
    </div>

    <div class="input-field">
      <%= form.text_field :icon, placeholder: 'icon URL', required: true %>
    </div>

    <div class="submit-button">
      <%= form.submit 'Save' %>
    </div>
  <% end %>
</div>
